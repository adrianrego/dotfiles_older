[user]
    name = Adrian Rego
    email = arego320@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto
[alias]
    ci = commit -a
    st = status
    co = checkout
    ba = branch -a
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[push]
    default = tracking
[core]
    excludesfile = "~/.gitexcludes"
    editor = mvim -f
